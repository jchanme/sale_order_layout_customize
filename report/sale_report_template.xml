<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t/t[2]" position="replace"/>     
        <xpath expr="//t/t[3]" position="replace"/>
        <xpath expr="//div[@id='informations']" position="replace"/>
        <xpath expr="//h2" position="after">
            <div class="row mt32 mb32">
                <div>
                    <strong>Customer:</strong>
                    <p class="m-0" t-field="doc.partner_id"
                       t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />
                </div>
                <div>
                    <strong>Invoicing Address:</strong>
                    <p t-field="doc.partner_invoice_id"
                       t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                </div>
                <div id="informations">
                    <!--<div class="col-xs-5">
                        <strong>Your Contact:</strong>
                    </div>
                    <div class="col-xs-7">
                        <div t-field="doc.user_id" 
                             t-options="{&quot;widget&quot;: &quot;contact&quot;,&quot;fields&quot;: [&quot;name&quot;, &quot;phone&quot;, &quot;email&quot;]}"/>
                    </div>-->
                </div>
            </div>
        </xpath>
    </template>
</odoo>
